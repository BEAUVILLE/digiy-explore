  <script>
    // ==============================
    // CONFIG — SUPABASE (à coller)
    // ==============================
    // ⚠️ Mets ici TES variables (comme tu fais sur tes autres modules).
    // Je ne les invente pas.
    const SUPABASE_URL = "PASTE_YOUR_SUPABASE_URL";
    const SUPABASE_ANON_KEY = "PASTE_YOUR_SUPABASE_ANON_KEY";

    // Table leads recommandée:
    // public.digiy_explore_agency_leads
    const LEADS_TABLE = "digiy_explore_agency_leads";

    // Numéro WhatsApp DIGIY
    const DIGIY_WA = "221771342889";

    // ==============================
    // UI — MENU
    // ==============================
    const menuBtn = document.getElementById("menuBtn");
    const drawer = document.getElementById("drawer");
    function setMenu(open){
      if(open){
        drawer.classList.add("active");
        menuBtn.setAttribute("aria-expanded","true");
        menuBtn.innerHTML = '<i class="fa-solid fa-xmark"></i>';
        document.body.style.overflow = "hidden";
      } else {
        drawer.classList.remove("active");
        menuBtn.setAttribute("aria-expanded","false");
        menuBtn.innerHTML = '<i class="fa-solid fa-bars"></i>';
        document.body.style.overflow = "";
      }
    }
    menuBtn.addEventListener("click", () => setMenu(!drawer.classList.contains("active")));
    drawer.querySelectorAll("a").forEach(a => a.addEventListener("click", () => setMenu(false)));
    document.addEventListener("keydown", (e)=>{ if(e.key==="Escape") setMenu(false); });
    document.addEventListener("click",(e)=>{
      if(!drawer.classList.contains("active")) return;
      if(drawer.contains(e.target) || menuBtn.contains(e.target)) return;
      setMenu(false);
    });

    // ==============================
    // HELPERS
    // ==============================
    function $(id){ return document.getElementById(id); }
    function clean(s){ return (s||"").toString().trim(); }
    function buildWhatsAppMessage(data){
      const msg =
`Bonjour DIGIY EXPLORE,

Demande PARTENARIAT AGENCE (Pack ESSENTIEL)

Agence: ${data.agency_name}
Contact: ${data.manager_name}
WhatsApp: ${data.phone}
Ville: ${data.city || "—"}
Zones: ${data.zones || "—"}
Site/Page: ${data.website || "—"}

Message:
${data.message || "Je souhaite devenir partenaire."}

Tarif compris: Activation 150 000 FCFA + 30 000 FCFA / mois.`;
      return encodeURIComponent(msg);
    }
    function setStatus(kind, text){
      const el = $("status");
      el.className = "status " + (kind==="ok" ? "ok" : "bad");
      el.textContent = text;
    }

    // ==============================
    // SUPABASE INIT
    // ==============================
    let sb = null;
    function getSb(){
      if(sb) return sb;
      if(!window.supabase?.createClient) throw new Error("Supabase SDK manquant.");
      if(!SUPABASE_URL || SUPABASE_URL.includes("PASTE_")) throw new Error("SUPABASE_URL non configurée.");
      if(!SUPABASE_ANON_KEY || SUPABASE_ANON_KEY.includes("PASTE_")) throw new Error("SUPABASE_ANON_KEY non configurée.");
      sb = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
      return sb;
    }

    // ==============================
    // FORM SUBMIT
    // ==============================
    const leadForm = $("leadForm");
    const waFallback = $("waFallback");

    function updateWaLink(data){
      const wa = `https://wa.me/${DIGIY_WA}?text=${buildWhatsAppMessage(data)}`;
      waFallback.href = wa;
    }

    leadForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const data = {
        agency_name: clean($("agency_name").value),
        manager_name: clean($("manager_name").value),
        phone: clean($("phone").value),
        city: clean($("city").value),
        zones: clean($("zones").value),
        website: clean($("website").value),
        message: clean($("message").value),
        source: "explore_agence_pro_v1",
        pack: "essentiel",
        price_month_fcfa: 30000,
        setup_fee_fcfa: 150000
      };

      updateWaLink(data);

      // Validation minimale
      if(!data.agency_name || !data.manager_name || !data.phone){
        setStatus("bad","Champs obligatoires manquants (agence, contact, WhatsApp).");
        return;
      }

      // 1) Try Supabase insert
      try{
        const sb = getSb();
        const { error } = await sb.from(LEADS_TABLE).insert([data]);
        if(error) throw error;

        setStatus("ok","Demande envoyée ✅ On vous contacte sur WhatsApp.");
        // option: ouvrir WA en plus
        window.open(waFallback.href, "_blank", "noopener,noreferrer");
        leadForm.reset();
        return;
      }catch(err){
        console.warn("Lead insert failed:", err);
        setStatus("bad","Envoi base non dispo. Ouverture WhatsApp…");
        window.open(waFallback.href, "_blank", "noopener,noreferrer");
      }
    });

    // Init WA link with empty values (safe)
    updateWaLink({
      agency_name:"", manager_name:"", phone:"", city:"", zones:"", website:"", message:""
    });

    // Smooth anchors (avoid '#' traps)
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener("click",(e)=>{
        const href=a.getAttribute("href");
        if(!href || href==="#" || href==="#!") return;
        const t=document.querySelector(href);
        if(t){ e.preventDefault(); t.scrollIntoView({behavior:"smooth",block:"start"}); }
      });
    });
  </script>

  <!--
  ✅ SQL RECOMMANDÉ (à exécuter dans Supabase) — table leads
  ----------------------------------------------------------
  create table if not exists public.digiy_explore_agency_leads (
    id uuid primary key default gen_random_uuid(),
    created_at timestamptz not null default now(),
    agency_name text not null,
    manager_name text not null,
    phone text not null,
    city text,
    zones text,
    website text,
    message text,
    source text,
    pack text,
    price_month_fcfa int,
    setup_fee_fcfa int
  );

  -- RLS (simple, optionnel) : autoriser inserts publics
  alter table public.digiy_explore_agency_leads enable row level security;

  drop policy if exists "public_insert_leads" on public.digiy_explore_agency_leads;
  create policy "public_insert_leads"
  on public.digiy_explore_agency_leads
  for insert
  to anon
  with check (true);
  -->
</body>
</html>

